{
    "name": "akas/laravel-bridge",
    "description": "use laravel eloquent, view, pagination anywhere",
    "keywords": [
        "laravel",
        "artisan",
        "terminal",
        "console",
        "web",
        "web artisan"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "recca0120",
            "email": "recca0120@gmail.com"
        },
        {
            "name": "akas",
            "email": "andifahruddinakas@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "illuminate/config": "^5.2",
        "illuminate/container": "^5.2",
        "illuminate/cache": "^5.2",
        "illuminate/database": "^5.2",
        "illuminate/events": "^5.2",
        "illuminate/encryption": "^5.2",
        "illuminate/filesystem": "^5.2",
        "illuminate/http": "^5.2",
        "illuminate/log": "^5.2",
        "illuminate/pagination": "^5.2",
        "illuminate/support": "^5.2",
        "illuminate/view": "^5.2",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "illuminate/translation": "^5.2",
        "mockery/mockery": "~0.9.2",
        "nesbot/carbon": "~1.20",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^4 | ^5 | ^6",
        "psy/psysh": "^0.9.9",
        "recca0120/laravel-tracy": "^1.5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "conflict": {
        "illuminate/contracts": "5.3.* | 5.4.*"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Akas\\LaravelBridge\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    }
}
