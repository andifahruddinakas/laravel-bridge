{
    "name": "akas/laravel-bridge",
    "description": "use illuminate component laravel outside laravel in any project",
    "keywords": [
        "laravel",
        "artisan",
        "terminal",
        "console",
        "web",
        "web artisan"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "recca0120",
            "email": "recca0120@gmail.com"
        },
        {
            "name": "akas",
            "email": "andifahruddinakas@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "illuminate/cache": "^7.30",
        "illuminate/config": "^7.30",
        "illuminate/container": "^7.30",
        "illuminate/database": "^7.30",
        "illuminate/encryption": "^7.30",
        "illuminate/events": "^7.30",
        "illuminate/filesystem": "^7.30",
        "illuminate/hashing": "^7.30",
        "illuminate/http": "^7.30",
        "illuminate/log": "^7.30",
        "illuminate/pagination": "^7.30",
        "illuminate/support": "^7.30",
        "illuminate/translation": "^7.30",
        "illuminate/view": "^7.30",
        "psr/container": "^1.1",
        "rappasoft/laravel-helpers": "^2.1"
    },
    "conflict": {
        "illuminate/contracts": "8.*"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Akas\\LaravelBridge\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "nesbot/carbon": "^2.72",
        "php-coveralls/php-coveralls": "^2.7",
        "phpunit/phpunit": "^9.6",
        "psy/psysh": "^0.12.0",
        "recca0120/laravel-tracy": "^1.16",
        "squizlabs/php_codesniffer": "^3.8"
    }
}
