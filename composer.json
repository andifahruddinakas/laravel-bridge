{
    "name": "akas/laravel-bridge",
    "description": "use illuminate component laravel outside laravel in any project",
    "keywords": [
        "laravel",
        "artisan",
        "terminal",
        "console",
        "web",
        "web artisan"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "recca0120",
            "email": "recca0120@gmail.com"
        },
        {
            "name": "akas",
            "email": "andifahruddinakas@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "illuminate/session": "^8.0",
        "laravel/lumen-framework": "^8.0",
        "rappasoft/laravel-helpers": "^2.1"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Akas\\Bridge\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
